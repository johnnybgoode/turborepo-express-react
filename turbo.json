{
  "$schema": "https://turborepo.dev/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": ["API_PORT", "API_URL"],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": [".env*"],
      "env": ["API_PORT", "API_URL"]
    },
    "lint": {},
    "test": {
      "dependsOn": ["transit", "@repo/vitest-config#build"]
    },
    "transit": {
      "dependsOn": ["^transit"]
    }
  }
}
